<?xml version="1.0"?>
<JWM>

    <!-- The root menu. -->
    <RootMenu onroot="12">
        <!-- <Include>/etc/jwm/debian-menu</Include> -->
        <Program icon="utilities-terminal" label="Terminal">xterm</Program>
        <Separator/>
        <Program icon="system-file-manager" label="PCManFM">pcmanfm</Program>
       <Program icon="falkon" label="Falkon">falkon</Program>
       <Program icon="qutebrowser" label="QuteBrowser">qutebrowser</Program>
	<Program icon="librewolf" label="LibreWolf">librewolf</Program>
	<Program icon="/home/lmagri/.local/bin/zen/browser/chrome/icons/default/default128.png" label="Zen Browser">/home/lmagri/.local/bin/zen/zen</Program>
        <Separator/>
        <Program icon="Sci48M" label="Scite">scite</Program>
        <!-- <Program icon="geany" label="Geany">geany</Program> -->
        <Program icon="vscode" label="VS Code">code</Program>
	<Program icon="onlyoffice-desktopeditors" label="OnlyOffice">onlyoffice-desktopeditors</Program>
        <Separator/>
        <Menu label="System">
        <Menu label="Keyboard">
            <Program label="_  enUS">setxkbmap -layout us -variant intl</Program>
            <Program label="_  ptBR">setxkbmap -layout br -variant abnt2</Program>
        </Menu>
	<Menu label="Maintenance">
	    <Program label="Map touch output">xinput --map-to-output "FTSC1000:00 2808:1015" DSI1</Program>
	    <Program label="Restart touch driver">xterm -e 'sudo modprobe -r hid_multitouch && sudo modprobe hid_multitouch && xinput --map-to-output "FTSC1000:00 2808:1015" DSI1'</Program>
	</Menu>
        <Restart label="Restart" icon="reload"/>
        <Program icon="display" label="Arandr">arandr</Program>
        <Program icon="preferences-desktop-theme" label="lxAppearance">lxappearance</Program>
        <Program icon="utilities-system-monitor" label="lxTask">lxtask</Program>
        <Program icon="onboard" label="onBoard">onboard</Program>
        </Menu>
        <Program icon="lock" label="Lock">xtrlock</Program>
        <Exit label="Log Out" confirm="true" icon="exit"/>
        <Separator/>
        <Program label="Reboot">sudo systemctl reboot </Program>
        <Program label="Power Off">sudo systemctl poweroff</Program>
    </RootMenu>

    <!-- Options for program groups. -->
    <Group>
        <Option>tiled</Option>
    </Group>
    <!--<Group>
        <Name>xterm</Name>
        <Option>vmax</Option>
    </Group> -->

    <Tray x="0" y="0" height="25" autohide="off" delay="1000">
        <TrayButton icon="/usr/share/jwm/jwm-red.svg">root:1</TrayButton>
        <Spacer width="2"/>
        <TrayButton label="_">showdesktop</TrayButton>
        <Spacer width="2"/>
        <Pager labeled="true"/>
        <TaskList maxwidth="256"/>
        <Dock/>
        <Clock format="%l:%M %p"><Button mask="123">exec:xclock</Button></Clock>
    </Tray>

    <!-- Visual Styles -->
    <WindowStyle>
        <Font>Sans-12:bold</Font>
        <Width>4</Width>
        <Corner>0</Corner>
        <Foreground>#eeeeee</Foreground>
        <Background>#2e3440</Background>
        <Outline>#4c566a</Outline>
        <Opacity>0.95</Opacity>
        <Active>
            <Foreground>#FFFFFF</Foreground>
            <Background>#5e81ac</Background>
            <Outline>#81a1c1</Outline>
            <Opacity>1.0</Opacity>
        </Active>
        <Inactive>
            <Foreground>#bbbbbb</Foreground>
            <Background>#3b4252</Background>
            <Outline>#4c566a</Outline>
        </Inactive>
    </WindowStyle>
    <TrayStyle>
        <Font>Sans-12</Font>
        <Background>#333333</Background>
        <Foreground>#FFFFFF</Foreground>
        <Outline>#4c566a</Outline>
        <Opacity>0.75</Opacity>
    </TrayStyle>
    <TaskListStyle list="all" group="true">
      <Font>Sans-12</Font>
      <Active>
        <Foreground>#FFFFFF</Foreground>
        <Background>#5e81ac</Background> <!-- 555555 -->
      </Active>
      <Foreground>#FFFFFF</Foreground>
      <Background>#333333</Background>
    </TaskListStyle>
    <PagerStyle>
        <Foreground>#555555</Foreground>
        <Background>#333333</Background>
        <Text>#FFFFFF</Text>
        <Active>
            <Foreground>#0077CC</Foreground>
            <Background>#004488</Background>
        </Active>
    </PagerStyle>
    <MenuStyle>
        <Font>Sans-12</Font>
        <Foreground>#FFFFFF</Foreground>
        <Background>#333333</Background>
        <Active>
            <Foreground>#FFFFFF</Foreground>
            <Background>#0077CC</Background>
        </Active>
        <Opacity>0.85</Opacity>
    </MenuStyle>
    <PopupStyle>
        <Font>Sans-12</Font>
        <Foreground>#000000</Foreground>
        <Background>#999999</Background>
    </PopupStyle>

